/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "paths": {
      "@providerServices/*": ["projects/provider/src/app/core/services/*"],
      "@providerGuards/*": ["projects/provider/src/app/core/guards/*"],
      "@providerModels/*": ["projects/provider/src/app/core/models/*"],
      "@providerPipes/*": ["projects/provider/src/app/core/pipes/*"],
    },
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false
  }
}
